{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "command": "dotnet clean",
      "type": "shell",
      "presentation": {
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build",
      "windows": {
        "command": "dotnet build; copy functions/local.settings.json functions/bin/Debug/netcoreapp2.1"
      },
      "osx": {
        "command": "dotnet build && cp functions/local.settings.json functions/bin/Debug/netcoreapp2.1"
      },
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "restore",
      "command": "dotnet restore",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean release",
      "command": "dotnet clean --configuration Release",
      "type": "shell",
      "presentation": {
        "reveal": "always"
      }, 
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet publish --configuration Release",
      "type": "shell",
      "dependsOn": "clean release",
      "presentation": {
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}/functions"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "start",
      "identifier": "runFunctionsHost",
      "type": "shell",
      "dependsOn": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/functions/bin/Debug/netcoreapp2.1"
      },
      "command": "func host start --useHttps --cert ../../../localhost.pfx --password Abcd1234!",
      "isBackground": true,
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "unit",
      "windows": {
        "command": "dotnet build; dotnet test"
      },
      "osx": {
        "command": "dotnet build; dotnet test"
      },
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}/functions.tests.unit"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "integration",
      "windows": {
        "command": "dotnet test"
      },
      "osx": {
        "command": "dotnet test"
      },
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "options": {
        "cwd": "${workspaceFolder}/functions.tests.integration"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
