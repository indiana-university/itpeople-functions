{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "apiId": {
            "matchCondition": {
                "route": "/api/{action}/{id}"
            },
            "backendUri": "https://%API_HOST%/api/{action}/{id}"
        },
        "api": {
            "matchCondition": {
                "route": "/api/{action}"
            },
            "backendUri": "https://%API_HOST%/api/{action}"
        },
        "spaManifest": {
            "matchCondition": {
                "route": "/manifest.json"
            },
            "backendUri": "https://%SPA_HOST%/app/manifest.json"
        },
        "spaAsset": {
            "matchCondition": {
                "route": "/static/{*url}"
            },
            "backendUri": "https://%SPA_HOST%/app/static/{url}"
        },
        "spa": {
            "matchCondition": {
                "route": "{*url}"
            },
            "backendUri": "https://%SPA_HOST%/app/index.html"
        }
    }
}
